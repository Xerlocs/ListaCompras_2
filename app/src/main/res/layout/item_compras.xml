<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginRight="16dp"
    android:layout_marginLeft="16dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/vacio"
        android:layout_width="1dp"
        android:layout_height="1dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/item_nombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vacio"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="HOLA" />

    <TextView
        android:id="@+id/item_especificacion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/MagicalMerlin"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/vacio"
        app:layout_constraintTop_toBottomOf="@+id/item_nombre"
        tools:text="HOLA" />

    <TextView
        android:id="@+id/cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/cantidad"
        android:textColor="@color/CoolBlue"
        app:layout_constraintStart_toEndOf="@+id/vacio"
        app:layout_constraintTop_toBottomOf="@+id/item_especificacion"
        tools:text="HOLA" />


    <TextView
        android:id="@+id/item_cantidad"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/CoolBlue"
        app:layout_constraintStart_toEndOf="@+id/cantidad"
        app:layout_constraintTop_toBottomOf="@+id/item_especificacion"
        tools:text="HOLA" />

    <TextView
        android:id="@+id/precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/precio"
        android:textColor="@color/CoolBlue"
        app:layout_constraintRight_toLeftOf="@+id/item_precio"
        app:layout_constraintTop_toBottomOf="@+id/item_especificacion"
        tools:text="HOLA" />


    <TextView
        android:id="@+id/item_precio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/CoolBlue"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/item_especificacion"
        tools:text="HOLA" />

</androidx.constraintlayout.widget.ConstraintLayout>
